<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.fuelconsumptioncalculator.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="distanceLabel"/>
    <TextField fx:id="distanceField"/>

    <Label fx:id="fuelLabel"/>
    <TextField fx:id="fuelField"/>

    <Button fx:id="calculateButton" onAction="#handleCalculate"/>

    <!-- Language Buttons -->
    <Button fx:id="en" text="EN" onAction="#handleLanguageChange"/>
    <Button fx:id="fr" text="FR" onAction="#handleLanguageChange"/>
    <Button fx:id="jp" text="JP" onAction="#handleLanguageChange"/>
    <Button fx:id="ir" text="IR" onAction="#handleLanguageChange"/>


    <Label fx:id="resultLabel"/>
</VBox>
